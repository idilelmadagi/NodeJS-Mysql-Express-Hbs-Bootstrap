<div class="row align-items-center" style="height:70%;">
 
    <h3 class="mt-3" style="color:lightblue ; text-align: center" >Update Customer Information</h3>
    <div style="margin-top: 5rem;">
         {{#each rows}}
        <form action="/{{this.customer_id}}" method="POST">
            <div class="row align-items-center "> 
            
                    <div class="col-md-3 offset-md-3 text-white">
            
                            <div class="form-outline mb-3">
                                <label for="floatingInput" class="form-label">Store ID</label>
                                <input type="text" class="form-control" id="floatingInput" value="{{this.store_id}}" name="store_id" required>
                            </div>
                            <div class="form-outline mb-3">
                                <label for="floatingInput" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="floatingInput" value="{{this.first_name}}" name="first_name" required>
                            </div>
                            <div class="form-outline mb-3">
                                <label for="floatingInput" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="floatingInput" value="{{this.last_name}}" name="last_name" required>
                            </div>
                    </div>
                    <div class="col-md-3 text-white">
                        
                            <div class="form-outline mb-3">
                                <label for="floatingInput" class="form-label">Email</label>
                                <input type="text" class="form-control" id="floatingInput" value="{{this.email}}" name="email">
                            </div>
                            <div class="form-outline mb-3">                
                                <label for="floatingInput" class="form-label">Address ID</label>
                                <input type="text" class="form-control" id="floatingInput" name="address_id" value="{{this.address_id}}" required>
                            </div>   
                            <div class="form-outline mb-3">
                                <label for="floatingInput" class="form-label">Active</label>
                                <select id="floatingInput"  name="active" value="{{this.active}}" id="categoryDropDown" class="form-select" required >
                                    <option value="{{this.active}}" >{{this.active}}</option>            
                                    <option value="0" >0</option>      
                                    <option value="1" >1</option>                    
                                </select>
                            </div>        

                    </div>
                
            </div>
            <div class="row mt-5 justify-content-center">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary" style="font-family:sans-serif; font-size:14;">Save</button>    

                    </div>
                     <div class="col-md-2">
                        <a href="/delete/{{this.customer_id}}" type="button" class="btn btn-danger" style="font-family:sans-serif; font-size:14;"><i class="bi bi-trash"></i>Delete</a>

                    </div>
            </div>
        
        </form>
        {{/each}}
    </div>   
   
</div>
<script type="text/javascript">


    (function () {
    'use strict'

    var forms = document.querySelectorAll('.needs-validation')

    Array.prototype.slice.call(forms)
        .forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
            }

            form.classList.add('was-validated')
        }, false)
        })
    })()

</script>
